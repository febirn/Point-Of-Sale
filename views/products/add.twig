{% extends 'templates/default.twig' %}

{% block title %} POS | Point Of Sale {% endblock %}

{% block content %}

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-heading">Add Product</div>
			<div class="panel-body">
				<form action="{{ path_for('product.add') }}" method="POST" enctype="multipart/form-data">
					<div class="form-group {{ errors.name ? 'has-error' : '' }}">
						<label for="name">Nama</label>
						<input type="text" name="name" id="name" class="form-control" value="{{ old.name }}">
						{% if errors.name %}
							<span class="help-block">{{errors.name | first}}</span>
						{% endif %}
					</div>
					<div class="form-group {{ errors.price ? 'has-error' : '' }}">
						<label for="price">Harga</label>
						<input type="number" name="price" id="price" class="form-control">
						{% if errors.password %}
							<span class="help-block">{{errors.price | first}}</span>
						{% endif %}
					</div>
					<div class="form-group {{ errors.category ? 'has-error' : '' }}">
						<label for="email">Kategori</label>
						<select name="category" class="">
							<option value="1">Makanan</option>
							<option value="2">Minuman</option>
						</select>
					</div>
					<div class="form-group {{ errors.image ? 'has-error' : '' }}">
						<label for="name">Nama</label>
						<input type="text" name="image" id="image" class="form-control" value="{{ old.image }}">
						{% if errors.image %}
							<span class="help-block">{{errors.image | first}}</span>
						{% endif %}
					</div>
					<button class="btn btn-default">Add Product</button>
				</form>
			</div>
		</div>
	</div>
</div>

{% endblock %}
